{% extends 'base.html.twig' %}

{% block title %}
    Nouvel avis
{% endblock %}

{% block body %}
    <div class="container">
        <div class="mx-0 mx-sm-auto">
            <div class="card">
                <div class="card-header bg-primary">
                    <h5 class="card-title text-white mt-2" id="exampleModalLabel">Formulaire d'avis</h5>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="far fa-file-alt fa-4x mb-3 text-primary"></i>
                        <p>
                            <strong>Votre avis compte (faux)</strong>
                        </p>
                        <p>
                            Des idées pour améliorer l'application ?
                            <strong>Ecrivez-le.</strong>
                        </p>
                    </div>

                    <hr />

                    {{ form_start(form) }}

                        <p class="text-center"><strong>Qu'est-ce que nous pouvons améliorer ?</strong></p>

                        <!-- Message input -->
                        <div class="form-outline mb-4">
                            {{ form_row(form.message) }}
                        </div>

                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
